<% content_for :head do %>
	<%= display_meta_tags title: 'Store' %>
	<%= display_meta_tags description: 'Now with more wugs' %>
	<%= display_meta_tags keywords: 'Hoodies, shirts, sweaters, mugs, prints' %>
<% end %>
<div> 
	<button id="mugs">
		<h2>Mugs</h2>
	</button>
	<div class="collection mugs">
		<% @mugs.each do |p| %>
			<div class="product">
				<%= link_to image_tag(p["image"]["src"], alt: "Buy #{p['title']}", class: 'cell'), "https://#{ENV["SHOPIFY_API_LINK"]}/products/#{p["handle"]}", target: "_blank" %>
				<p class="cell"><%= p["title"] %></p>
				<p class="cell">Price: <%= number_to_currency(p["variants"][0]["price"].to_f, precision: 0) %></p>
			</div>
		<% end %>
	</div>
</div>
