<% content_for :head do %>
	<%= display_meta_tags description: @description %>
	<%= display_meta_tags keywords: @keywords %>
	<%= display_meta_tags og: {
	  title: :title,
	  type: 'website',
	  url: strip_url(@strip),
	  image: strip_variant(@strip, "786"),
	  description: :description,
	  site_name: 'PinkWug' 
	} %>
	<%= display_meta_tags twitter: {
	  card: 'summary_large_image',
	  site: '@pinkwug',
	  title: :title,
	  description: :description,
	  creator: '@pinkwug',
	  image: strip_variant(@strip, "786")
	} %>
	<%= preload_link_tag 'Twitter.png' %>    
	<%= preload_link_tag 'Facebook.png' %>    
	<%= preload_link_tag 'Instagram.png' %>    
	<%= preload_link_tag 'Reddit.png' %>    
	<%= preload_link_tag 'Tumblr.png' %>   
<% end %>
<div class="content" style="max-width: 70vh; min-width: 100%;" >
	<h1 class="visually-hidden"><%= title @title %></h1>
	<div class="parent" style="min-height: 100%; max-height: 70vh;">
		<%= image_tag(strip_variant(@strip, "1780"), 
		  srcset: { strip_variant(@strip, "375") => "375w",
								strip_variant(@strip, "600") => "600w",
								strip_variant(@strip, "786") => "786w",
								strip_variant(@strip, "1080") => "1080w",
							  strip_variant(@strip, "1600") => "1600w",
							}, sizes: "70vh", alt: h(@strip.transcript).gsub(/\n/, '&#13;&#10;').html_safe, class: "#{@last} comic", tabindex: '0', width: '100%', height: '100%') %>
	</div>
	<%= render 'comicNav' %>
	<div class="comment", tabindex="0">
		<p><%= @strip.title %><br>published in <%= @strip.created_at.strftime("%B %-d, %Y") %></p>	
		<%= Rinku.auto_link(simple_format(@strip.comment), :all, 'target="_blank"').html_safe unless @strip.comment.blank? %>
		<% if @strip.has_print? %>
			<p class="ad"><%= link_to "print available!", store_index_url << "?prints" %></p>
		<% end %>
		<p><span>share this comic!</span></p>
		<div class="share_buttons">
			<% @links.each do |link| %>
				<%= link_to link, target: "_blank", class: split_url(link) do %>
					<span class="visually-hidden"><%= split_url(link) %></span>	
				<% end %>
			<% end %>
			<button class="tooltip" onclick="updateClipboard('<%= strip_url(@strip) %>')">
				<span>copy link</span>
			</button>
		</div>
	</div>
</div>
<% content_for :javascripts do %>
  <%= javascript_include_tag "strips.js", "data-turbolinks-track" => true %>
  <script>	 
  	var icons = document.querySelectorAll(".icons");
  	for (let i=0; i < icons.length; i++){
  		icons[i].classList.remove("active");
  	}
  	document.querySelector(".logo").classList.add("active");
	</script>
<% end %>