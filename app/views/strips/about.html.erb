	<%= display_meta_tags og: {
    title: :title,
    type: 'website',
    url: about_url,
    image: url_for(asset_path("Profile3.png")),
    description: :description,
    site_name: 'Pink Wug' 
  } %>
  <%= display_meta_tags twitter: {
    card: 'summary_large_image',
    site: '@pinkwug',
    title: :title,
    image: url_for(asset_path("Profile3.png")),
    description: :description,
    creator: '@pinkwug',
